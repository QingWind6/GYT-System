.text-top{
  margin-top: 3rpx;
  align-items: center;
}


.flex{
  align-items: center;
  flex-direction: row;
  display: flex;
  font-size: large;
  margin-top: 30rpx;
}



.flex-label{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 40rpx;
  height: 40rpx;
  font-size: 24rpx;
  font-weight: bold;
  background-color: #f0f0f0;
}

.status {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  border: 2px solid #ccc;
  margin: 0 10px;
}

.active {
