.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.flex-btn {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  display: flex; 
  justify-content: center;
  align-items: center;  
}

.button-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}


.button-new1 {
  background-color: #2577e4;
  color: #f0f0f0;
